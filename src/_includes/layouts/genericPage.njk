{% extends "base.njk" %}

{% block content %}
    <section class="site-blog details">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <article class="site-blog-details">
              <h2 class="blog-title">{{title}}</h2>
              <img class="feature-image" src="{{page_image}}" alt="page-details-image">
              {{content | safe}}
            </article>
          </div>
        </div>
      </div>
    </section>
{% endblock %}