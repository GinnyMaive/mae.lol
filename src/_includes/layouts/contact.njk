{% extends "base.njk" %}

{% block content %}

    <section class="site-contact">
      <div class="container">
        <div class="row">
          <div class="col-lg-5">
            <h1 class="site-contact-title">
              {{title}}<span>{{subTitle}}</span>
            </h1>
          </div>
          <div class="col-lg-6 ml-auto">
            <div class="site-contact-form">
	      {{content | safe}}
              <p class="">
              {% for contactInfo in footer.contactsInfo %}
                <a href="{{contactInfo.link}}"><img src="{{contactInfo.icon}}" width=32 height=22 border=0 style="padding-right: 10px">{{contactInfo.text}}</a>
                <br>
              {% endfor %}
              </p>
<br><br>
	      <p>I also post somewhat regularly on social media! You can follow me or DM me on those platforms if that's more your jam:</p>
              <p class="">
              {% for socialMedia in footer.socialMedia %}
                <li><a href="{{socialMedia.link}}"><img src="{{socialMedia.icon}}" width=32 height=22 border=0 style="padding-right: 10px"> {{socialMedia.text}}</a></li>
                {% endfor %}
		</p>
		
          </div>
	</div>
	</div>
	</div>

    </section>
  
{% endblock %}
{% block workTogether %}{% endblock %}
